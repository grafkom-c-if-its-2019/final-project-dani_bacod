{
  "main": "webpack.config.js",
  "engines": {
    "node": ">= 7.0.0"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register tests/**/*.test.js",
    "test-watch": "mocha --compilers js:babel-register --watch tests/**/*.test.js",
    "build": "webpack --mode=production",
    "build-dev": "webpack",
